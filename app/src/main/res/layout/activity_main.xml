<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tylerbennet.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/appHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/titleText"
        android:text="My Nanodegree Apps!" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight=".50" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/udacity"
            android:textColor="@color/buttonText"
            android:text="Popular Movies"
            android:onClick="popularMoviesMessage"/>
        <Button
            android:id="@+id/btn2"
            android:layout_below="@id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/udacity"
            android:textColor="@color/buttonText"
            android:text="Stock Hawk"
            android:onClick="stockHawkMessage"/>
        <Button
            android:id="@+id/btn3"
            android:layout_below="@id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/udacity"
            android:textColor="@color/buttonText"
            android:text="Build It Bigger"
            android:onClick="buildItBiggerMessage"/>
        <Button
            android:id="@+id/btn4"
            android:layout_below="@id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/udacity"
            android:textColor="@color/buttonText"
            android:text="Make Your App Material"
            android:onClick="appMaterialMessage"/>
        <Button
            android:id="@+id/btn5"
            android:layout_below="@id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/udacity"
            android:textColor="@color/buttonText"
            android:text="Go Ubiquitous"
            android:onClick="ubiquitousMessage"/>
        <Button
            android:id="@+id/btn6"
            android:layout_below="@id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/udacity"
            android:textColor="@color/buttonText"
            android:text="Capstone"
            android:onClick="capstoneMessage"/>
        </RelativeLayout>
</RelativeLayout>
